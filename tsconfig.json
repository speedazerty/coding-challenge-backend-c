{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "build",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    "types": [
      "node", "mocha"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es2019"]
},
  "exclude": ["tests"]
}
